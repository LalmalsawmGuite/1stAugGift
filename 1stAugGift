  <script>
    function createHearts() {
      const container = document.getElementById('hearts');
      for (let i = 0; i < 20; i++) {
        const heart = document.createElement('div');
        heart.classList.add('heart');
        heart.style.left = Math.random() * 100 + 'vw';
        heart.style.top = Math.random() * 100 + 'vh';
        heart.style.fontSize = (Math.random() * 20 + 10) + 'px';
        heart.innerHTML = 'â¤';
        heart.style.animationDuration = (Math.random() * 5 + 3) + 's';
        container.appendChild(heart);
      }
    }
    createHearts();

    function checkStep1() {
      const name = document.getElementById('name').value.toLowerCase();
      const age = document.getElementById('age').value;
      if (name.includes('natalia') && parseInt(age) > 0) {
        showStep('step2');
      } else {
        alert('Hmm... try again ğŸ˜…');
      }
    }

    function checkStep2() {
      const birthday = document.getElementById('birthday').value;
      if (birthday === 'June 13, 2002') {
        showStep('step3');
      } else {
        alert('Oops! Try again ğŸ‚');
      }
    }

    function revealInfinity() {
      document.getElementById('loveHint').classList.remove('hidden');
    }

    function checkStep3() {
      const love = document.getElementById('loveScale').value;
      if (love.toLowerCase() === 'infinity' || love === 'âˆ') {
        showStep('step4');
      } else {
        alert('Hmm, are you sure that's enough? ğŸ¤­');
      }
    }

    function checkStep4() {
      const color = document.getElementById('color').value;
      if (color.length > 0) {
        showStep('step5');
      } else {
        alert("You gotta pick something! ğŸ–Œï¸");
      }
    }

    function showStep(stepId) {
      const steps = document.querySelectorAll('.card');
      steps.forEach(step => step.classList.add('hidden'));
      document.getElementById(stepId).classList.remove('hidden');
    }

    function showFinal() {
      showStep('final');
      triggerConfetti();
    }

    function triggerConfetti() {
      for (let i = 0; i < 100; i++) {
        const confetti = document.createElement('div');
        confetti.style.position = 'fixed';
        confetti.style.width = '10px';
        confetti.style.height = '10px';
        confetti.style.background = `hsl(${Math.random() * 360}, 100%, 70%)`;
        confetti.style.left = `${Math.random() * 100}vw`;
        confetti.style.top = '-20px';
        confetti.style.animation = `fall ${Math.random() * 3 + 2}s linear forwards`;
        confetti.style.borderRadius = '50%';
        document.body.appendChild(confetti);
      }
    }
  </script>
